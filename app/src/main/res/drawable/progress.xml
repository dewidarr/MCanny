<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <rotate
            android:duration="10"
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="2160">

            <shape
                android:innerRadiusRatio="3"
                android:shape="ring"
                android:thicknessRatio="8"
                android:useLevel="false">

                <size
                    android:width="76dip"
                    android:height="76dip" />

                <gradient
                    android:angle="0"
                    android:endColor="#ffe100"
                    android:startColor="#00ffffff"
                    android:type="sweep"
                    android:useLevel="false" />

            </shape>

        </rotate>
    </item>
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">

        <rotate
            android:duration="10"
            android:fromDegrees="2160"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="0">

            <shape
                android:innerRadiusRatio="6"
                android:shape="ring"
                android:thicknessRatio="16"
                android:useLevel="false">

                <size
                    android:width="134dp"
                    android:height="134dp" />

                <gradient
                    android:angle="0"
                    android:endColor="#00ffffff"
                    android:startColor="#ffe100"
                    android:type="sweep"
                    android:useLevel="false" />

            </shape>

        </rotate>
    </item>

</layer-list>
